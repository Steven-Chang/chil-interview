<div class="comment mt-3" id="comment-<%= comment.id %>">
  <div class="comment__meta">
    <span class="comment__meta-author"><%= comment.author.username %></span>
    <span class="post__meta-published ml-1"><%= l(comment.created_at.to_date, format: :short) %></span>
  </div>
  <div class="comment__body mt-2">
    <%= sanitize(comment.body) %>
  </div>
  <div class="comment__footer mt-2">
  	<%= link_to "Reply",
                "#",
                'login-required': current_user.nil?,
                class: 'reply-link',
                data: { 'comment-id': comment.id } %>
  </div>
  
  <%= render partial: "shared/comments",
             object: comment.comments,
             locals: { commentable: comment } %>
</div>
