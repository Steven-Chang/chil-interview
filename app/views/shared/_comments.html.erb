<div id="<%= comments_container_id(commentable) %>" class="<%= comments_container_class(commentable) %>">
	<% if local_assigns[:show_title].presence %>
		<h4 class="comments-counter"><%= pluralize(comments.count, "Comment") %></h4>
	<% end %>
	
	<%= render partial: "shared/comment_form", locals: { commentable: commentable } %>
	<%= render partial: "shared/comment", collection: comments %>
</div>
